{
  "name": "novelworkernode",
  "version": "1.0.0",
  "description": "novel worker in node",
  "main": "./dist/index.js",
  "type": "module",
  "scripts": {
    "start-localstack": "docker compose up -d",
    "create-localstack-resources": "create-localstack-resources.sh",
    "test": "jest",
    "docker-build": "docker build -t novelworkernode:latest ."
  },
  "author": "Xiang Rong Lin",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.82.0",
    "@aws-sdk/client-s3": "3.82.0",
    "@aws-sdk/client-sqs": "3.82.0",
    "@aws-sdk/s3-request-presigner": "3.82.0",
    "percollate": "2.1.0"
  },
  "overrides": {
    "puppeteer": "13.7.0"
  },
  "devDependencies": {
    "@swc/jest": "^0.2.21",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "jest": "^28.1.0",
    "typescript": "^4.6.4"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)s?$": [
        "@swc/jest"
      ]
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!percollate|puppeteer|franc-all|trigram-utils|n-gram|collapse-white-space).+(js|jsx)$"
    ],
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules/",
      "src/types"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts?$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "cobertura",
      "json",
      "lcov",
      "text"
    ]
  }
}
