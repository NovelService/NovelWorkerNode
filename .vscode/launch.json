{
    "configurations": [
        {
         
                "type": "pwa-node",
                "request": "launch",
                "name": "Launch Program",
                "skipFiles": [
                    "<node_internals>/**"
                ],
                "preLaunchTask": "typescript",
                "program": "${workspaceFolder}/src/index.ts",
                "outFiles": [
                    "${workspaceFolder}/**/*.js"
                ],
                "sourceMaps": true,
                "envFile": "${workspaceFolder}/.env"
            }
    ]
}