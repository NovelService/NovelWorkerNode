{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compilerOptions": {
      "module": "ES2020",
      "moduleResolution": "Node",
      "allowJs": false,
      "outDir": "./dist",
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }